<!DOCTYPE html>
<html>
  <head>
    <title>Nichasa</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">


    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <nav class="navbar navbar-default navbar-fixed-top topnav" role="navigation" style="margin:0;padding:0;">
        <div class="container topnav">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand topnav" href="/#">Nichasa</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                      <a href="/women" class="dropdown-toggle">Women</a>
                      <ul class="dropdown-menu">
                        <li><a href="/t-shirts">T-shirts</a></li>
                        <li><a href="/jeans">Jeans</a></li>
                        <li><a href="/dresses">Dresses</a></li>
                        <li><a href="/shorts">Shorts</a></li>
                        <li><a href="/coats-and-jackets">Coats and jackets</a></li>
                      </ul>
                    </li>
                    <li class="dropdown">
                    <a href="/men" class="dropdown-toggle">Men</a>
                    <ul class="dropdown-menu">
                      <li><a href="/t-shirts">T-shirts</a></li>
                      <li><a href="/jeans">Jeans</a></li>
                      <li><a href="/trousers">Trousers</a></li>
                      <li><a href="/shorts">Shorts</a></li>
                      <li><a href="/coats-and-jackets">Coats and jackets</a></li>
                    </ul>
                  </li>
                    <li>
                        <a href="/shoppers/orders">My Orders</a>
                    </li>
                    <li>
                        <a href="/users/sign_up">Join</a>
                    </li>
                    <li>
                        <a href="/users/sign_in">Sign In</a>
                    </li>

                    <li>
                    <a href="/shopping-cart"><i class="fa fa-shopping-cart fa-lg" aria-hidden="true"></i></a>
                    </li>


                    <li><%= link_to'Logout', destroy_user_session_path, method: :delete %></li>

                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
  </head>

  <body>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>

  <footer>
      <div class="container">
          <div class="row">
              <div class="col-lg-12">
                  <ul class="list-inline">
                      <li>
                          <a href="/#">Home</a>
                      </li>
                      <li class="footer-menu-divider">&sdot;</li>
                      <li>
                          <a href="/women">Women</a>
                      </li>
                      <li class="footer-menu-divider">&sdot;</li>
                      <li>
                          <a href="/men">Men</a>
                      </li>
                      <li class="footer-menu-divider">&sdot;</li>
                      <li>
                          <a href="/contact">Contact</a>
                      </li>

                  </ul>
                  <p class="copyright text-muted small">Copyright &copy; Nichasa 2017. All Rights Reserved</p>
              </div>
          </div>
      </div>
  </footer>

</html>
