<h1>All My Orders</h1>

<% @myorders.each do |f| %>

	<table>
		<thead>
			<th>ID</th>
			<th>Amount</th>
			<th>Payment Date</th>
			<th>Ship Status</th>
		</thead>
		<tbody>
			<td><%= f.id %></td>
			<td><%= f.amount %></td>
			<td><%= f.payment_date %></td>
			<td><%= f.ship_status %></td>
			<td><%= link_to "View", shoppers_order_path(id: f.id) %></td>
		</tbody>
	</table>
<% end %>

<%= link_to "Back", root_path %>

